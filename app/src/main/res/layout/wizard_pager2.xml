<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res/com.kun.mobilesafe"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过绑定SIM卡：\n下次重启手机如果发现SIM卡变化\n就会发生报警短信"
        android:textSize="25dp"
        android:textColor="#333333"/>
    <com.kun.mobilesafe.view.CheckBoxItem
        android:id="@+id/cbi_bind_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:titleText="点击绑定SIM卡"
        custom:checkedCueText="SIM卡已绑定"
        custom:uncheckedCueText="SIM卡未绑定"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bind"/>
</LinearLayout>
